@model NorthwindStore.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryModel.CategoryId" class="control-label"></label>
                <input asp-for="CategoryModel.CategoryId" class="form-control" readonly="readonly" />
                <span asp-validation-for="CategoryModel.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryModel.CategoryName" class="control-label"></label>
                <input asp-for="CategoryModel.CategoryName" class="form-control" />
                <span asp-validation-for="CategoryModel.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryModel.Description" class="control-label"></label>
                <input asp-for="CategoryModel.Description" class="form-control" />
                <span asp-validation-for="CategoryModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dl>
                    <dt>
                        <label asp-for="CategoryImageFile" class="control-label"></label>
                    </dt>
                    <dd>
                        <input asp-for="CategoryImageFile" type="file" class="form-control-file"/>
                        <span asp-validation-for="CategoryModel.Picture" class="text-danger"></span>
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
